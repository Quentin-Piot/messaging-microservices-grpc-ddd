{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "esnext.asynciterable"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "types": ["node"]
    },
    "exclude": ["node_modules", "dist"]
}