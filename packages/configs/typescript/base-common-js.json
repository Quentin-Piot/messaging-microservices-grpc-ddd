{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "target": "ES2021",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "strict": true
  },
  "exclude": [
    "node_modules"
  ]
}
